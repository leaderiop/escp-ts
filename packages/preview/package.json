{
  "name": "@escp/preview",
  "version": "1.0.0",
  "description": "PRN file parser and preview renderer (PNG/SVG/Canvas) for ESC/P output",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest",
    "test:run": "vitest run --passWithNoTests",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "escp",
    "preview",
    "prn",
    "png",
    "svg",
    "canvas"
  ],
  "author": "Mohammad AL Mechkor",
  "license": "MIT",
  "dependencies": {
    "@escp/core": "workspace:*"
  },
  "peerDependencies": {
    "sharp": ">=0.32.0"
  },
  "peerDependenciesMeta": {
    "sharp": {
      "optional": true
    }
  },
  "devDependencies": {
    "@escp/config": "workspace:*",
    "@types/node": "^20.10.0",
    "eslint": "^9.39.1",
    "sharp": "^0.34.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^4.0.14"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  }
}
