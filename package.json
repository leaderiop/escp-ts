{
  "name": "escp-ts",
  "version": "1.0.0",
  "description": "ESC/P and ESC/P2 layout engine for dot matrix printers (EPSON LQ-2090II)",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "bench": "npx tsx benchmarks/bench.ts"
  },
  "keywords": [
    "escp",
    "escp2",
    "epson",
    "dot-matrix",
    "printer",
    "lq-2090",
    "layout-engine"
  ],
  "author": "Mohammad AL Mechkor",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "sharp": "^0.34.5",
    "tsup": "^8.0.1",
    "typedoc": "^0.28.14",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "a",
      "esbuild",
      "h",
      "p",
      "r",
      "s",
      "sharp"
    ]
  },
  "dependencies": {
    "yoga-layout": "^3.2.1"
  }
}
